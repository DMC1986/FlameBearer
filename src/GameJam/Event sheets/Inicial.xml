<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Inicial</name>
    <events>
        <event-block>
            <conditions>
                <condition id="2" name="Key is down" type="Keyboard">
                    <param id="0" name="Key">13 (Return)</param>
                </condition>
            </conditions>
            <actions>
                <action id="-9" name="Destroy" type="StartText" />
                <action id="-16" name="Wait" type="System">
                    <param id="0" name="Seconds">1</param>
                </action>
                <action id="-9" name="Destroy" type="StartCutScene" />
                <action id="-15" name="Set visible" type="StartCutScene2">
                    <param id="0" name="Visibility">1</param>
                </action>
                <action id="3" name="Start" type="StartCutScene2">
                    <param id="0" name="From">1</param>
                </action>
                <action id="-16" name="Wait" type="System">
                    <param id="0" name="Seconds">5</param>
                </action>
                <action id="-2" name="Go to layout" type="System">
                    <param id="0" name="Layout">Fase</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On key pressed" type="Keyboard">
                    <param id="0" name="Key">32 (Space)</param>
                </condition>
            </conditions>
            <actions>
                <action id="-9" name="Destroy" type="StartText" />
                <action id="-16" name="Wait" type="System">
